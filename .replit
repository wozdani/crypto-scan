modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "openssl", "pkg-config", "qhull", "tcl", "tk", "unzip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Crypto Scanner"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Crypto Scanner Service"

[[workflows.workflow]]
name = "Crypto Scanner"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv run python app.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Crypto Scanner Service"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python crypto_scan_service.py"

[deployment]
run = ["sh", "-c", "uv run python app.py"]

[[ports]]
localPort = 5000
externalPort = 80

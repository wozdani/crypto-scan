modules = ["python-3.11", "python3"]

[nix]
channel = "stable-24_05"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "lcms2", "libimagequant", "libjpeg", "libjpeg_turbo", "libpng", "libtiff", "libwebp", "libxcrypt", "openjpeg", "openssl", "pkg-config", "qhull", "tcl", "tk", "unzip", "which", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Crypto Scanner"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Crypto Scanner Service"

[[workflows.workflow]]
name = "Crypto Scanner"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd crypto-scan && uv run python app.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Crypto Scanner Service"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd crypto-scan && python crypto_scan_service_simple.py"

[deployment]
run = ["sh", "-c", "uv run python app.py"]

[[ports]]
localPort = 5000
externalPort = 80
